# Discord Bot Configuration
# Copy this file to your .env file and fill in the values

# Discord Bot Token
# Get this from: https://discord.com/developers/applications
# Create a new application → Bot → Create Bot → Copy Token
DISCORD_BOT_TOKEN=your_discord_bot_token_here

# Discord Channel ID for file uploads
# Enable Developer Mode in Discord → Right-click #event-uploads → Copy ID
DISCORD_UPLOAD_CHANNEL_ID=your_channel_id_here

# Immich Configuration
# Immich server URL (internal Docker network)
IMMICH_SERVER_URL=http://immich-server:2283

# Immich Admin API Key
# Get this from: Immich Web UI → Settings → API Keys → Create API Key
IMMICH_API_KEY=your_immich_api_key_here

# Database Path (default, usually no need to change)
BOT_DB_PATH=/app/data/bot.sqlite

# Notification Polling Interval (seconds)
# How often to check for new assets (default: 120 = 2 minutes)
NOTIFICATION_POLL_INTERVAL=120

# MCP Server Configuration (optional)
# Enable MCP server for programmatic Discord access
MCP_ENABLED=true
MCP_PORT=8001
MCP_HOST=0.0.0.0
