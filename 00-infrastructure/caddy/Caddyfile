# ComfyUI
{$COMFYUI_HOSTNAME} {
    # Basic Authentication (optional - uncomment to enable)
    # Generate password hash with: caddy hash-password
    # basicauth {
    #     {$COMFYUI_USERNAME} {$COMFYUI_PASSWORD_HASH}
    # }
    
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    reverse_proxy comfyui:8188 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto https
        header_up X-Forwarded-Host {host}
    }
}

# Infisical
{$INFISICAL_HOSTNAME}:80 {
    header {
        X-Content-Type-Options "nosniff"
        X-Frame-Options "DENY"
        X-XSS-Protection "1; mode=block"
        Referrer-Policy "strict-origin-when-cross-origin"
    }
    reverse_proxy infisical-backend:8080 {
        header_up Host {host}
        header_up X-Real-IP {remote}
        header_up X-Forwarded-For {remote}
        header_up X-Forwarded-Proto https
        header_up X-Forwarded-Host {host}
        # Preserve all response headers including Set-Cookie
        # Caddy preserves Set-Cookie by default, but ensure proper handling
        transport http {
            read_timeout 300s
            write_timeout 300s
        }
    }
}

